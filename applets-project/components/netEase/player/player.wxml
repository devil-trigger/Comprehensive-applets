<!-- 播放器-核心 -->
<view class="playerItem">
    <!-- 音频 -->
    <!-- <audio src="{{song}}" id="myAudio"></audio > -->
    <!-- 底部栏 -->
    <view class="playerContent flex justify-between align-center" catchtap="showPopup">
        <view class="flex align-center">
            <view>
                <image class="round" src="http://ww1.sinaimg.cn/large/00650Xxqjw1f68ayoa8h4j30sg0lcjud.jpg"
                    mode="aspectFill">
                </image>
            </view>
            <view class="padding-lg flex">
                <view class="text-bold">淘汰</view>
                <view>-陈奕迅</view>
            </view>
        </view>
        <view class="flex playerTag">
            <view class="text-df playTag text-center round margin-right" catchtap="playSwitchFun">
                <text class="cuIcon-{{playerState?'stop':'playfill'}}"></text>
            </view>
            <view class="sortTag margin-right" catchtap="onplayerList">
                <text class="cuIcon-sort"></text>
            </view>
        </view>
    </view>
</view>
<!-- 播放器 弹出层 -->
<van-popup show="{{ popupDisplay }}" bind:close="popupClose" position="bottom"
    custom-style="height: 97%;background:#f3f3f3" round='true' catchtouchmove='prohibit'>
    <view class="song-bg"></view>
    <view class="popupItem">
        <view class="text-white padding flex justify-between">
            <view class="padding-xs text-lg" bindtap="popupClose">
                <text class="cuIcon-unfold"></text>
            </view>
            <view class="text-center">
                <view>淘汰</view>
                <view>陈奕迅</view>
            </view>
            <view class="padding-xs">
                <view>分享</view>
            </view>
        </view>
        <view class="margin-top recordItem flex justify-center">
            <view class="recordImg">
                <view class="record">
                    <image src="/image/music-page/record.png" mode="aspectFit"></image>
                </view>
                <view class="album round">
                    <image src="http://ww1.sinaimg.cn/large/00650Xxqjw1f68ayoa8h4j30sg0lcjud.jpg" mode="aspectFit">
                    </image>
                </view>
            </view>
        </view>
        <view class="popupPlayer margin-top">
            <view class="flex align-center justify-between margin-sm text-sm text-white">
                <view>0:12</view>
                <view class="play-progress">
                    <van-slider value="50" bar-height='5rpx' active-color="#fff" inactive-color="#676767"
                        use-button-slot>
                        <view class="custom-button round" slot="button">
                        </view>
                    </van-slider>
                </view>
                <view>0:12</view>
            </view>
            <view>
                <view class="padding flex justify-center align-center popup-playerItem">
                    <view class="popupTag">
                        <image src="/image/music-page/playIcon/previous.svg"></image>
                    </view>
                    <view class="popup-playItem round" bindtap="playSwitchFun">
                        <image src="/image/music-page/playIcon/{{playerState}}.svg"></image>
                    </view>
                    <view class="popupTag">
                        <image src="/image/music-page/playIcon/next.svg"></image>
                    </view>
                </view>
            </view>
        </view>
    </view>
</van-popup>

<!-- 播放列表弹出层 -->
<van-popup show="{{ playerList }}" catchtouchmove='prohibit' position="bottom" round custom-style="height:70%;" closeable bind:close="popupClose" close-icon='arrow-down'>
    <view class="margin">
        <view class="margin-bottom">
            当前播放<text class="text-xs text-gray">（12）</text>
        </view>
        <view>
            <view class="playerListItem flex justify-between">
                <view class="text-sm flex align-center">
                    <view>
                        <image src="/image/music-page/playIcon/xunhuan.svg" mode="aspectFit"></image>
                    </view>
                    <view class="margin-left-xs">
                        单曲循环
                    </view>
                </view>
                <view class="padding-xs">
                    <text class="cuIcon-delete"></text>
                </view>
            </view>
        </view>
        <view class="margin-top">
            <view class="flex justify-between align-center margin-bottom">
                <view>
                    黑色毛衣
                    <text class="text-xs text-gray"> - 周杰伦</text>
                </view>
                <view class="padding-xs">
                    <text class="cuIcon-close text-lg"></text>
                </view>
            </view>
            <view class="flex justify-between align-center margin-bottom">
                <view>
                    黑色毛衣
                    <text class="text-xs text-gray"> - 周杰伦</text>
                </view>
                <view class="padding-xs">
                    <text class="cuIcon-close text-lg"></text>
                </view>
            </view>
        </view>
    </view>
</van-popup>