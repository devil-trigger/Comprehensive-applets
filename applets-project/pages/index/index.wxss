/* 新增城市 */
.addItem{
    position: fixed;
    right:50rpx;
    bottom: 200rpx;
}
/* 顶部 */
.locationItem{
    padding: 7rpx 20rpx;
    background-color:rgba(0, 0, 0, .2);
}

