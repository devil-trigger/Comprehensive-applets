/* 背景 */

.bg_box{
    overflow: hidden;
    position: absolute;
    top: 0;
    left: 0;
    width: 100vw;
    height: 100%;
    z-index: 1;
}
.bg_box>image{
    width: 100%;
    height: 100%;
}
#weathItem{
	/* font-family:Wawati SC; */
    font-family:'webfont';
    z-index: 9;
    position: relative;
	/* font-weight:lighter; */
}
/* 标题栏 */
.navigation-Item {
    position:fixed ;
    top: 0;
    left: 0;
    z-index: 9;
    width: 100vw;
}

.nav-main {
    width: 100%;
    height: 100%;
    position: relative;
}

.navigation-Item .capsule-box {
    position: absolute;
    box-sizing: border-box;
    width: 100%;
}
