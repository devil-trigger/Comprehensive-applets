/* 头部背景 */
.header {
  color: #fff;
  position: relative;
  background-size: cover;
  background-position: 50%;
  background-repeat: no-repeat;
  padding: 0;
  height: 187px;
  margin-bottom: -380rpx;
  z-index: 1;
  background-color: #10aeb5;
  background-image: url(//mms-res.cdn.bcebos.com/mms-res/voicefe/captain/mola/Virus/1.1.338/assets/bg-header.840c435.jpg);
}

.sub {
  position: relative;
  /* top: 20px; */
  z-index: 50;
}

.title {
  padding: 26rpx;
}

/* 小标题 */
.Subtitle {
  /* display: inline-block; */
  margin-top: 71px;
  margin-left: 17px;
  font-size: 30rpx;
  color: #c4faff;
  letter-spacing: 0.125rpx;
}

/* 大标题 */
.Headline {
  position: relative;
  margin-top: 8px;
  padding-left: 17px;
  font-size: 1.5rem;
  height: 1.5rem;
  max-width: 100%;
  line-height: 1.5rem;
  white-space: nowrap;
  font-weight: 700;
  color: #fff;
}

.tab {
  padding: 10rpx;
  background-color: #fff;
  border-radius: 30rpx;
}

.tabs-view {
  padding: 5rpx;
}

.tabTitle {
  font-size: 1rem;
  font-weight: 700;
  margin: 30rpx 0 0 30rpx;

}

.covid-num {
  width: 100%;
  flex-wrap: wrap;
  padding: 10rpx 5rpx 10rpx 5rpx;
}

.num-item {
  width: 25%;
  padding: 15rpx;
}

.numItem-title {
  font-size: .9375rem;
  height: 0.9375rem;
  line-height: .9375rem;
  margin-bottom: 0.625rem;
  color: #333;
}

.numItem-num{
  font-size: 1.1875rem;
  height: 1.1875rem;
  line-height: 1.1875rem;
  font-family: PingFangSC-Medium;
}

/* 图表 */
.chartView {
  width: 100vw;
  height: 100vh;
}

.canvas {
  width: 640px;
  height: 400px;

}